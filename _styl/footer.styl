footer
  font-size: .75rem
  padding: 1rem
  display: flex
  flex-flow: row wrap
  background-color: $colors.darkest-grey
  color: $colors.light-grey
  text-align: center
  align-items: center
  justify-content: center
  .info
  .share
  .offerings
    background-color: $colors.darkest-grey
    color: $colors.light-grey
    align-items: center
    line-height: 1

  .info
    text-align: center
    padding: .5rem
    margin: 0
    max-width: 250px

    .nav
      list-style: none
      margin: 0
      padding: .25rem
      text-align: left
      font-size: .9rem

      li
        padding: .25rem 0
        margin: 0
        a
          display: block
  .share
    max-width: 300px

  .offerings
    max-width: 500px
    text-align: center

    .services
      ul
        li
          a
            background-color: $colors.white
            padding: .25rem
            border-radius: .5rem

  .share
  .offerings
    display: flex
    flex-flow: column nowrap
    gap: .25rem
    padding: .75rem 1rem
    margin: .5rem
    justify-content: center
    align-items: center
    align-self: center
    border-radius: 1rem
    background-color: $colors.darker-grey

    .label
      font-size: 1rem
      padding: 1rem
      margin: 0

    .services
      display: flex
      ul
        display: flex
        list-style: none
        justify-content: center
        margin: 0
        padding: 0
        gap: .5rem
        li
          a
            display: block
            margin: 0 .25rem
            img
              max-width: 200px
              max-height: 40px


.share
  &.inline
    display: flex
    padding: .5rem
    justify-content: flex-end
    align-items: center
    background-color: $colors.darkest-grey
    .label
      font-size: .9rem
    .services
      ul
        list-style: none
        margin: 0
        padding: 0
        display: flex
        align-items: center
        li
          margin: 0
          padding: 0 .25rem
          line-height: 1
          a
            display: flex
            img
              max-height: 30px


@media screen and (max-width: 700px)
  footer
    flex-flow: column nowrap
    .info
    .share
    .offerings
      max-width: 100%
      flex: 1 auto
